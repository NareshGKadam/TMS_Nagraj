<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg12"
        android:tint="@color/list_selector1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/num60"
        android:background="@color/orange_sec">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/num50"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/logout11"
            android:visibility="invisible"
            android:tint="@color/clr_white" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/clr_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Geotag"
        android:visibility="gone" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="scene"
        android:visibility="gone"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="332dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/num20"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/num150"
            android:layout_height="45dp"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="false"
            android:background="@drawable/selector_button_rounded"
            android:text="Submit"
            android:textColor="@color/clr_white"
            android:visibility="visible" />

        <Button
            android:id="@+id/button7"
            android:layout_width="@dimen/num150"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_button_rounded"
            android:text="Search by Index"
            android:textColor="@color/clr_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_gray"
            android:orientation="horizontal"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/num150"
            android:layout_height="45dp"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_button_rounded"
            android:text="Analytics"
            android:textColor="@color/clr_white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="179dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="-157dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/googleg_standard_color_18" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner"
            android:dropDownVerticalOffset="35dp"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="@dimen/num40" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#dcdcdc" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:src="@drawable/aaa" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_sec"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_sec"
            android:textSize="@dimen/num20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered By" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:src="@drawable/bb" />

    </LinearLayout>




</RelativeLayout>